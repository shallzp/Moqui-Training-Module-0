<?xml version="1.0" encoding="UTF-8" ?>
<resource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/rest-api-3.xsd"
          name="party" displayName="Party REST API" require-authentication="anonymous-all">

    <resource name="persons">
        <method type="get">
            <entity name="party.Person" operation="list" />
        </method>
        <method type="post">
            <service name="party.PartyServices.create#Person"/>
        </method>
    </resource>
</resource>